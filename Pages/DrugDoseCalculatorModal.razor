                            <div class="drug-standard-column indications-column">
                                <div class="drug-standard-label">âœ” Indications</div>
                                <ul class="drug-standard-list">
                                    @foreach (var indication in DrugDetails.Indications)
                                    {
                                        <li>@indication</li>
                                    }
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="drug-standard-column indications-column">
                                <div class="drug-standard-label">âœ” Indications</div>
                                <ul class="drug-standard-list">
                                    <li>Severe respiratory tract infections (e.g. pneumonia, sinusitis)</li>
                                    <li>Skin &amp; soft tissue infections</li>
                                    <li>Severe dental abscesses</li>
                                </ul>
                            </div>
                        }

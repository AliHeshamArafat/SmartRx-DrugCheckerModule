                            </div>
                            <div class="drug-main-subtitle">
                                @(DrugDetails != null && !string.IsNullOrWhiteSpace(DrugDetails.GenericName) ? $"({DrugDetails.GenericName})" : "(Amoxicillin 875 mg / Clavulanic Acid 125 mg)")
                            </div>
                            <div class="drug-main-meta">
                                @(DrugDetails != null && !string.IsNullOrWhiteSpace(DrugDetails.Form) ? DrugDetails.Form : "Film-Coated Tablets â€“ 14 Tablets")
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Standard dosing section -->
                <div class="drug-section-card">
                    <div class="drug-section-header primary">
                        <div class="drug-section-header-left">
                                <img src="images/Capsule.png" alt="Capsule" class="capsule-icon" />
                            <div>
                                <div class="drug-section-title">Standard Dosing</div>
                                <div class="drug-section-subtitle">Based on typical adult dosing</div>
                            </div>
                        </div>
                    </div>


                                </div>
                                <div class="drug-standard-value">@(DrugDetails?.Frequency ?? "Every 12 hours")</div>
                            </div>
                            <div class="drug-standard-column">
                                <div class="drug-standard-label">
                                    <img src="images/Capsule.png" alt="Capsule" class="label-icon" />
                                    Dose form
                                </div>
                                <div class="drug-standard-value">@(DrugDetails?.DoseForm ?? "1000 mg film-coated tablet")</div>
                            </div>
                        </div>
                    </div>


                        {
                            @foreach (var (dose, index) in DrugDetails.Doses.Select((d, i) => (d, i)))
                            {
                                <div class="drug-dose-row @(index > 0 ? "muted" : "")">
                                    <div>
                                        <div class="drug-dose-row-title">@dose.Indication</div>
                                        @if (!string.IsNullOrWhiteSpace(dose.IndicationSubtitle))
                                        {
                                            <div class="drug-dose-row-subtitle">@dose.IndicationSubtitle</div>
                                        }
                                    </div>
                                    <div class="drug-dose-cell">@dose.Dose</div>
                                    <div class="drug-dose-cell">@dose.Frequency</div>
                                    <div class="drug-dose-cell">@dose.MaxDaily</div>

                        <div class="drug-section-header">
                            <div class="drug-section-header-left">
                                    <img src="images/People.png" alt="People" class="people-icon" />
                                <div>
                                    <div class="drug-section-title">Special Population Adjustments</div>
                                </div>
                            </div>
                        </div>

                        @foreach (var adjustment in DrugDetails.PopulationAdjustments)
                        {
                            <div class="drug-adjustment-block">
                                <div class="drug-adjustment-title-container">
                                    <div class="drug-adjustment-title with-icon">
                                        @if (!string.IsNullOrWhiteSpace(adjustment.Icon))
                                        {
                                            <img src="@adjustment.Icon" alt="@adjustment.Type" class="drop-icon" />
                                        }
                                        <span>@adjustment.Type</span>
                                    </div>
                                </div>
                                <div class="drug-adjustment-card-wrapper">
                                    @if (!string.IsNullOrWhiteSpace(adjustment.CautionTitle))
                                    {
                                        <div class="hepatic-caution-section">
                                            <div class="hepatic-caution-title">
                                                <img src="images/WarningYellow.png" alt="Warning" class="warning-icon-small" />
                                                <span>@adjustment.CautionTitle</span>
                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(adjustment.CautionText))
                                            {
                                                <div class="hepatic-monitor-text">
                                                    @adjustment.CautionText
                                                </div>
                                            }
                                        </div>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(adjustment.ContraindicatedText))
                                    {
                                        <div class="drug-adjustment-contraindicated-container">
                                            <div class="drug-adjustment-status red">
                                                <img src="images/Disallowed.png" alt="Disallowed" class="status-icon" />
                                                @adjustment.ContraindicatedText
                                            </div>
                                        </div>
                                    }
                                    @foreach (var card in adjustment.Cards)
                                    {
                                        <div class="drug-adjustment-card @(card.StatusColor == "red" ? "red-border" : card.StatusColor == "green" ? "green-border" : "")">
                                            @if (!string.IsNullOrWhiteSpace(card.Badge))
                                            {
                                                <div class="drug-adjustment-badge @card.StatusColor">@card.Badge</div>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(card.Status))
                                            {
                                                <div class="drug-adjustment-status @card.StatusColor">
                                                    <img src="@(card.StatusColor == "red" ? "images/Disallowed.png" : "images/Allowed.png")" alt="@card.Status" class="status-icon" />
                                                    @card.Status
                                                </div>
                                            }
                                            @if (card.Notes.Any())
                                            {
                                                <ul>
                                                    @foreach (var note in card.Notes)
                                                    {
                                                        <li>@note</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <!-- Fallback: Show default content if no data provided -->
                    <div class="drug-section-card">
                        <div class="drug-section-header">
                            <div class="drug-section-header-left">
                                    <img src="images/People.png" alt="People" class="people-icon" />
                                <div>
                                    <div class="drug-section-title">Special Population Adjustments</div>
                                </div>
                            </div>
                        </div>

                        <div class="drug-adjustment-block">
                            <div class="drug-adjustment-title-container">
                                <div class="drug-adjustment-title with-icon">
                                    <img src="images/drop.png" alt="Drop" class="drop-icon" />
                                    <span>Renal Impairment</span>
                                </div>
                            </div>
                            <div class="drug-adjustment-card-wrapper">
                                <div class="drug-adjustment-card red-border">
                                    <div class="drug-adjustment-badge red">CrCl &lt; 30 mL/min</div>
                                    <div class="drug-adjustment-status red">
                                        <img src="images/Disallowed.png" alt="Disallowed" class="status-icon" />
                                        Contraindicated
                                    </div>
                                    <ul>
                                        <li>Do NOT use 875 mg strength</li>
                                        <li>Use lower strengths (250 mg or 500 mg) for dose adjustment</li>
                                    </ul>
                                </div>
                                <div class="drug-adjustment-card green-border">
                                    <div class="drug-adjustment-badge green">CrCl â‰¥ 30 mL/min</div>
                                    <div class="drug-adjustment-status green">
                                        <img src="images/Allowed.png" alt="Allowed" class="status-icon" />
                                        No dosage adjustment required
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Administration instructions -->
                <div class="drug-section-card">
                    <div class="drug-section-header">
                        <div class="drug-section-header-left">
                                <img src="images/Utensils.png" alt="Utensils" class="utensils-icon" />
                            <div>
                                <div class="drug-section-title">Administration Instructions</div>
                            </div>
                        </div>
                    </div>

                    <ul class="drug-admin-list">
                        @if (DrugDetails != null && DrugDetails.AdministrationInstructions.Any())
                        {
                            @foreach (var instruction in DrugDetails.AdministrationInstructions)
                            {
                                <li>@instruction</li>
                            }
                        }
                        else
                        {
                            <li>Take at the start of a meal (better absorption &amp; less GI upset)</li>
                            <li>Swallow tablet whole with a full glass of water</li>
                            <li>Do not chew or crush the tablet</li>
                            <li>Space doses evenly (~12 hours apart)</li>
                        }
                    </ul>
                </div>

                @if (!string.IsNullOrWhiteSpace(CalculatorData))
                {
                    <div class="drug-extra-info">
                        @CalculatorData
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public string? DrugName { get; set; }

    [Parameter]
    public string? CalculatorData { get; set; }

    [Parameter]
    public DrugCalculatorDetails? DrugDetails { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Inject]
    private ModalStateService? ModalState { get; set; }

    // Data models for drug calculator
    public class DrugCalculatorDetails
    {
        public string GenericName { get; set; } = "";
        public string Form { get; set; } = "";
        public string Frequency { get; set; } = "";
        public string DoseForm { get; set; } = "";
        public List<string> Indications { get; set; } = new();
        public List<DoseInfo> Doses { get; set; } = new();
        public List<PopulationAdjustment> PopulationAdjustments { get; set; } = new();
        public List<string> AdministrationInstructions { get; set; } = new();
    }

    public class DoseInfo
    {
        public string Indication { get; set; } = "";
        public string IndicationSubtitle { get; set; } = "";
        public string Dose { get; set; } = "";
        public string Frequency { get; set; } = "";
        public string MaxDaily { get; set; } = "";
    }

    public class PopulationAdjustment
    {
        public string Type { get; set; } = ""; // Renal, Hepatic, Hemodialysis
        public string Icon { get; set; } = "";
        public List<AdjustmentCard> Cards { get; set; } = new();
        public string? CautionTitle { get; set; }
        public string? CautionText { get; set; }
        public string? ContraindicatedText { get; set; }
    }

    public class AdjustmentCard
    {
        public string Badge { get; set; } = "";
        public string Status { get; set; } = ""; // Allowed, Contraindicated, Use with caution
        public string StatusColor { get; set; } = ""; // green, red
        public List<string> Notes { get; set; } = new();
    }

    protected override void OnParametersSet()
    {
        if (ModalState != null)
        {
            ModalState.IsModalOpen = IsOpen;
        }
        base.OnParametersSet();
    }

    private async Task HandleBackdropClick()
    {
        if (OnClose.HasDelegate)
        {
            await OnClose.InvokeAsync(null);
        }
    }
}


@inject NavigationManager Navigation

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<div class="help-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="question-icon-wrapper">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="question-icon">
                    <path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <h1 class="hero-title">Get in Touch</h1>
            <p class="hero-subtitle">Have questions? We're here to help. Reach out to our support team.</p>
            
            <div class="search-container">
                <div class="search-input-wrapper">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="search-icon">
                        <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <input type="text" class="search-input" placeholder="Search for answers..." @bind="searchQuery" />
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-cards">
        <div class="stat-card">
            <div class="stat-icon-container stat-icon-drug">
                <img src="images/Capsule.png" alt="" class="stat-icon-image" />
            </div>
            <div class="stat-content">
                <div class="stat-value">10,000+</div>
                <div class="stat-label">Drug Interactions</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon-container stat-icon-providers">
                <img src="images/People.svg" alt="" class="stat-icon-image" />
            </div>
            <div class="stat-content">
                <div class="stat-value">5,000+</div>
                <div class="stat-label">Healthcare Providers</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon-container stat-icon-accuracy">
                <img src="images/Shield.svg" alt="" class="stat-icon-image" />
            </div>
            <div class="stat-content">
                <div class="stat-value">99.9%</div>
                <div class="stat-label">Data Accuracy</div>
            </div>
        </div>
    </div>

    <!-- FAQ Sections -->
    <div class="faq-sections">
        <!-- General Questions -->
        <div class="faq-section">
            <div class="faq-section-header">
                <div class="faq-icon-container faq-icon-container-blue">
                    <img src="images/DocumentWhite.svg" alt="" class="faq-section-icon-image" />
                </div>
                <div class="faq-section-title-group">
                    <h2 class="faq-section-title">General Questions</h2>
                    <p class="faq-section-description">Learn more about SmartRx and how it works</p>
                </div>
            </div>
            <div class="faq-items">
                @foreach (var item in generalQuestions)
                {
                    <div class="faq-item" @onclick="() => ToggleFaq(item)">
                        <span class="faq-question">@item.Question</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="faq-chevron @(item.IsOpen ? "open" : "")">
                            <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    @if (item.IsOpen)
                    {
                        <div class="faq-answer">
                            <p>@item.Answer</p>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Account & Pricing -->
        <div class="faq-section">
            <div class="faq-section-header">
                <div class="faq-icon-container faq-icon-container-orange">
                    <img src="images/Card.svg" alt="" class="faq-section-icon-image" />
                </div>
                <div class="faq-section-title-group">
                    <h2 class="faq-section-title">Account & Pricing</h2>
                    <p class="faq-section-description">Manage your subscription and billing</p>
                </div>
            </div>
            <div class="faq-items">
                @foreach (var item in accountPricingQuestions)
                {
                    <div class="faq-item" @onclick="() => ToggleFaq(item)">
                        <span class="faq-question">@item.Question</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="faq-chevron @(item.IsOpen ? "open" : "")">
                            <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    @if (item.IsOpen)
                    {
                        <div class="faq-answer">
                            <p>@item.Answer</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Still need help Section -->
    <div class="still-need-help-section">
        <h2 class="still-need-help-title">Still need help?</h2>
        <p class="still-need-help-description">Our support team is here to help you with any questions or issues you may have.</p>
        <button type="button" class="contact-support-btn" @onclick="HandleContactSupport">Contact Support</button>
    </div>

    <!-- Contact Form Section -->
    <div class="contact-form-section">
        <form class="contact-form" @onsubmit="HandleSubmitForm" @onsubmit:preventDefault="true">
            <div class="form-row-top">
                <div class="form-group-floating">
                    <input type="text" @bind="contactForm.Name" @bind:event="oninput" class="form-input @(HasValue(contactForm.Name) ? "has-value" : "")" placeholder="Your Name" required />
                    <label class="form-label-floating @(HasValue(contactForm.Name) ? "floating" : "")">Your Name</label>
                </div>
                <div class="form-group-floating">
                    <input type="email" @bind="contactForm.Email" @bind:event="oninput" class="form-input @(HasValue(contactForm.Email) ? "has-value" : "")" placeholder="Email Address" required />
                    <label class="form-label-floating @(HasValue(contactForm.Email) ? "floating" : "")">Email Address</label>
                </div>
                <div class="form-group-floating">
                    <input type="tel" @bind="contactForm.Phone" @bind:event="oninput" class="form-input @(HasValue(contactForm.Phone) ? "has-value" : "")" placeholder="Phone Number (optional)" />
                    <label class="form-label-floating @(HasValue(contactForm.Phone) ? "floating" : "")">Phone Number <span class="optional">(optional)</span></label>
                </div>
            </div>
            <div class="form-group-floating">
                <textarea @bind="contactForm.Message" @bind:event="oninput" class="form-textarea @(HasValue(contactForm.Message) ? "has-value" : "")" placeholder="Message" rows="5" required></textarea>
                <label class="form-label-floating @(HasValue(contactForm.Message) ? "floating" : "")">Message</label>
            </div>
            <button type="submit" class="send-message-btn">Send message</button>
        </form>
    </div>
</div>


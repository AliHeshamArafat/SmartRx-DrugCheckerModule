@page "/signup"
@layout AuthLayout
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-left">
            <div class="auth-logo">
                <img src="images/logo.png" alt="SmartRX" />
            </div>

            <div class="auth-content">
                <h1 class="auth-title">Sign up</h1>
                <p class="auth-subtitle">Sign up to enjoy the features of SmartRx.</p>

                <button type="button" class="google-button" @onclick="HandleGoogleSignIn">
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17.64 9.20454C17.64 8.56636 17.5827 7.95272 17.4764 7.36363H9V10.845H13.8436C13.635 11.97 13.0009 12.9231 12.0477 13.5613V15.8195H14.9564C16.6582 14.2527 17.64 11.9454 17.64 9.20454Z" fill="#4285F4"/>
                        <path d="M9 18C11.43 18 13.467 17.1941 14.9564 15.8195L12.0477 13.5613C11.2418 14.1013 10.2109 14.4204 9 14.4204C6.65455 14.4204 4.67182 12.8372 3.96409 10.71H0.957275V13.0418C2.43818 15.9831 5.48182 18 9 18Z" fill="#34A853"/>
                        <path d="M3.96409 10.71C3.78409 10.17 3.68182 9.59318 3.68182 9C3.68182 8.40681 3.78409 7.83 3.96409 7.29V4.95818H0.957273C0.347727 6.17318 0 7.54772 0 9C0 10.4523 0.347727 11.8268 0.957273 13.0418L3.96409 10.71Z" fill="#FBBC05"/>
                        <path d="M9 3.57955C10.3214 3.57955 11.5077 4.03364 12.4405 4.92545L15.0218 2.34409C13.4632 0.891818 11.4259 0 9 0C5.48182 0 2.43818 2.01682 0.957275 4.95818L3.96409 7.29C4.67182 5.16273 6.65455 3.57955 9 3.57955Z" fill="#EA4335"/>
                    </svg>
                    Sign in with Google
                </button>

                <div class="auth-divider">
                    <span>Or</span>
                </div>

                <EditForm EditContext="@editContext" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary style="display:none;" />

                    <div class="auth-form">
                        <div class="form-group">
                            <label class="form-label" for="signup-name">Your Name</label>
                            <InputText id="signup-name" class="@($"form-input {GetValidationClass(() => registration.Name)}")" @bind-Value="registration.Name" />
                            @if (formSubmitted)
                            {
                                <ValidationMessage For="@(() => registration.Name)" class="validation-message" />
                            }
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="signup-email">Email</label>
                            <InputText id="signup-email" class="@($"form-input {GetValidationClass(() => registration.Email)}")" @bind-Value="registration.Email" />
                            @if (formSubmitted)
                            {
                                <ValidationMessage For="@(() => registration.Email)" class="validation-message" />
                            }
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="signup-password">Password</label>
                            <div class="@($"password-wrapper {GetPasswordWrapperValidationClass()}")">
                                <InputText id="signup-password"
                                           class="form-input"
                                           type="@passwordInputType"
                                           @bind-Value="registration.Password" />
                                <button type="button" class="password-toggle" @onclick="TogglePasswordVisibility" aria-label="Toggle password visibility">
                                    <img src="images/@(isPasswordVisible ? "eye-off.png" : "eye-on.png")" alt="@(isPasswordVisible ? "Hide password" : "Show password")" class="eye-icon" />
                                </button>
                            </div>
                            @if (formSubmitted)
                            {
                                <ValidationMessage For="@(() => registration.Password)" class="validation-message" />
                            }
                        </div>

                        <div class="form-group phone-group">
                            <label class="form-label" for="signup-phone">Phone</label>
                            <div class="phone-input-wrapper">
                                <div class="phone-prefix">
                                    <img src="@GetFlagImage()" alt="@GetCountryName()" class="flag-icon" />
                                    <select class="country-code-select" @bind="registration.CountryCode" @bind:after="StateHasChanged">
                                        <option value="+20">+20</option>
                                        <option value="+966">+966</option>
                                    </select>
                                </div>
                                <InputText id="signup-phone" class="@($"form-input phone-input {GetValidationClass(() => registration.Phone)}")" @bind-Value="registration.Phone" placeholder="123 456 789" />
                            </div>
                            @if (formSubmitted)
                            {
                                <ValidationMessage For="@(() => registration.Phone)" class="validation-message" />
                            }
                        </div>

                        <div class="form-row form-row-between">
                            <label class="checkbox-label">
                                <InputCheckbox @bind-Value="registration.AcceptTerms" />
                                <span>I Agree With <a href="#">Terms &amp; Conditions</a></span>
                            </label>
                        </div>

                        <button type="submit" class="primary-button" disabled="@(!IsFormValid())">Sign up</button>
                    </div>
                </EditForm>

                <div class="auth-divider">
                    <span>Or</span>
                </div>

                <p class="auth-footer-text">
                    Already have an account?
                    <a href="/login">Sign in</a>
                </p>
            </div>
        </div>

        <div class="auth-right">
            <img src="images/robot 2.avif" alt="SmartRX Robot Doctor" class="auth-robot-image" />
        </div>
    </div>
</div>


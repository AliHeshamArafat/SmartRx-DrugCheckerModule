@code {
    [Inject]
    private NavigationManager? Navigation { get; set; }

    private bool isMonthly = true;

    protected override void OnInitialized()
    {
        if (MarketState != null)
        {
            MarketState.OnMarketChanged += HandleMarketChanged;
        }
    }

    private void NavigateToPayment(string plan)
    {
        if (Navigation != null)
        {
            Navigation.NavigateTo($"/payment/{plan}");
        }
    }

    private void NavigateToContact()
    {
        if (Navigation != null)
        {
            Navigation.NavigateTo("/dashboard/help");
        }
    }

    public void Dispose()
    {
        if (MarketState != null)
        {
            MarketState.OnMarketChanged -= HandleMarketChanged;
        }
    }

    private void HandleMarketChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void SetBillingPeriod(bool monthly)
    {
        isMonthly = monthly;
        StateHasChanged();
    }

    private string GetPriceNumber(string plan)
    {
        var market = MarketState?.SelectedMarket ?? "egypt";
        var prices = GetPricingForMarket(market);
        
        if (prices.ContainsKey(plan))
        {
            var basePrice = prices[plan];
            if (!isMonthly && plan != "enterprise")
            {
                // Annual pricing (10 months price for 12 months)
                basePrice = (int)(basePrice * 10);
            }
            return basePrice.ToString();
        }
        
        return "Custom";
    }

    private RenderFragment GetCurrencySymbol()
    {
        var market = MarketState?.SelectedMarket ?? "egypt";
        
        if (market == "egypt")
        {
            return builder =>
            {
                builder.AddContent(0, "Â£");
            };
        }
        else // saudi
        {
            return builder =>
            {
                builder.OpenElement(0, "img");
                builder.AddAttribute(1, "src", "/images/Riyal.webp");
                builder.AddAttribute(2, "alt", "SAR");
                builder.CloseElement();
            };
        }
    }

    private Dictionary<string, int> GetPricingForMarket(string market)
    {
        if (market == "egypt")
        {
            return new Dictionary<string, int>
            {
                { "individual", 29 },
                { "team", 99 },
                { "clinic", 299 }
            };
        }
        else // saudi
        {
            return new Dictionary<string, int>
            {
                { "individual", 120 },
                { "team", 400 },
                { "clinic", 1200 }
            };
        }
    }
}


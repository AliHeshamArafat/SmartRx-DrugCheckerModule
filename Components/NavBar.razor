@code {
    [Inject]
    private NavigationManager? Navigation { get; set; }

    [Inject]
    private MarketStateService? MarketState { get; set; }

    [Inject]
    private ModalStateService? ModalState { get; set; }

    [Inject]
    private IJSRuntime? JS { get; set; }

    private string activeSection = "home";
    private bool isMobileMenuOpen = false;

    protected override void OnInitialized()
    {
        UpdateActiveSection();
        if (ModalState != null)
        {
            ModalState.OnModalStateChanged += HandleModalStateChanged;
        }
        if (Navigation != null)
        {
            Navigation.LocationChanged += OnLocationChanged;
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            UpdateActiveSection();
        }
    }

    public void Dispose()
    {
        // Reset body scroll on dispose
        if (isMobileMenuOpen && JS != null)
        {
            _ = Task.Run(async () =>
            {
                try
                {
                    await JS.InvokeVoidAsync("eval", "document.body.style.overflow = 'auto'; document.body.style.position = 'static';");
                }
                catch
                {
                    // Ignore errors during cleanup
                }
            });
        }
        
        if (ModalState != null)
        {
            ModalState.OnModalStateChanged -= HandleModalStateChanged;
        }
        if (Navigation != null)
        {
            Navigation.LocationChanged -= OnLocationChanged;
        }
    }

    private void HandleModalStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
        await UpdateBodyScrollLock();
        StateHasChanged();
    }

    private async Task CloseMobileMenu()
    {
        if (isMobileMenuOpen)
        {
            isMobileMenuOpen = false;
            await UpdateBodyScrollLock();
            StateHasChanged();
        }
    }

    private async Task UpdateBodyScrollLock()
    {
        if (JS != null)
        {
            try
            {
                var overflowValue = isMobileMenuOpen ? "hidden" : "auto";
                await JS.InvokeVoidAsync("eval", $"document.body.style.overflow = '{overflowValue}'; document.body.style.position = '{(isMobileMenuOpen ? "fixed" : "static")}';");
            }
            catch
            {
                // Fallback if JS is not available
            }
        }
    }

    private void SetActiveSection(string section)
    {
        activeSection = section;
        StateHasChanged();
    }

    private void SelectMarket(string market)
    {
        if (MarketState != null)
        {
            MarketState.SelectedMarket = market;
        }
        StateHasChanged();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        UpdateActiveSection();
        await CloseMobileMenu();
        await InvokeAsync(StateHasChanged);
    }

    private void UpdateActiveSection()
    {
        if (Navigation != null)
        {
            var uri = Navigation.Uri;
            if (uri.Contains("/pricing"))
            {
                activeSection = "pricing";
            }
            else if (uri.Contains("/contact"))
            {
                activeSection = "contact";
            }
            else if (uri.Contains("/") || uri == Navigation.BaseUri || uri.EndsWith("/"))
            {
                activeSection = "app";
            }
            else
            {
                activeSection = "app";
            }
        }
    }

    private string GetSelectedMarket()
    {
        return MarketState?.SelectedMarket ?? "egypt";
    }

    private string GetNavbarPosition()
    {
        // Check if feedback modal is open OR calculator modal is open
        bool isAnyModalOpen = (ModalState?.IsModalOpen == true) || IsCalculatorModalOpen();
        return isAnyModalOpen ? "relative" : "sticky";
    }

    private string GetNavbarDisabledClass()
    {
        // Check if feedback modal is open OR calculator modal is open
        bool isAnyModalOpen = (ModalState?.IsModalOpen == true) || IsCalculatorModalOpen();
        return isAnyModalOpen ? "modal-open" : "";
    }

    private bool IsCalculatorModalOpen()
    {
        // This will be checked via JavaScript since we can't directly access DOM from C#
        // We'll use a JavaScript interop call, but for now return false and let CSS handle it
        return false;
    }
}

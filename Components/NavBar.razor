@* Navigation Bar Component *@
@using SmartRx_DrugChecker.Services
@using Microsoft.AspNetCore.Components.Routing
@implements IDisposable

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<nav class="navbar-container @(GetNavbarDisabledClass())" style="position: @GetNavbarPosition();">
    <div class="navbar-content">
        <div class="navbar-logo">
            <a href="/">
                <img src="images/logo.png" alt="SmartRX" class="logo-image" />
            </a>
        </div>

        <button class="mobile-menu-toggle" @onclick="ToggleMobileMenu" aria-label="Toggle menu" aria-expanded="@isMobileMenuOpen">
            <span class="hamburger-line @(isMobileMenuOpen ? "open" : "")"></span>
            <span class="hamburger-line @(isMobileMenuOpen ? "open" : "")"></span>
            <span class="hamburger-line @(isMobileMenuOpen ? "open" : "")"></span>
        </button>

        <div class="navbar-menu-container @(isMobileMenuOpen ? "mobile-open" : "")" @onclick="@(async () => { if (isMobileMenuOpen) await CloseMobileMenu(); })">
            <div class="mobile-menu-content" @onclick:stopPropagation="true">
            <ul class="navbar-menu">
                <li class="nav-item @(activeSection == "app" ? "active" : "")">
                    <a href="/" @onclick='async () => { SetActiveSection("app"); await CloseMobileMenu(); }'>App</a>
                </li>
                <li class="nav-item @(activeSection == "pricing" ? "active" : "")">
                    <a href="/pricing" @onclick='async () => { SetActiveSection("pricing"); await CloseMobileMenu(); }'>Pricing</a>
                </li>
                <li class="nav-item @(activeSection == "contact" ? "active" : "")">
                    <a href="/contact" @onclick='async () => { SetActiveSection("contact"); await CloseMobileMenu(); }'>Contact Us</a>
                </li>
            </ul>
                <div class="mobile-menu-cta">
                    <div class="mobile-market-selection">
                        <button class="btn-market-egypt-mobile @(GetSelectedMarket() == "egypt" ? "active" : "")" @onclick='async () => { SelectMarket("egypt"); await CloseMobileMenu(); }'>
                            <img src="images/EgyptFlag.png" alt="Egypt" class="flag-icon" />
                            <span>Egypt Market</span>
                        </button>
                        <button class="link-market-saudi-mobile @(GetSelectedMarket() == "saudi" ? "active" : "")" @onclick='async () => { SelectMarket("saudi"); await CloseMobileMenu(); }'>
                            <img src="images/KSA.webp" alt="Saudi Arabia" class="flag-icon" />
                            <span>Saudi Market</span>
                        </button>
                    </div>
                    <div class="mobile-auth-buttons">
                        <a href="/login" class="btn-signin-mobile" @onclick="CloseMobileMenu">Sign in</a>
                        <a href="/signup" class="link-create-account-mobile" @onclick="CloseMobileMenu">Create account</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="navbar-right-section">
            <div class="market-selection">
                <button class="btn-market-egypt @(GetSelectedMarket() == "egypt" ? "active" : "")" @onclick='() => SelectMarket("egypt")'>
                    <img src="images/EgyptFlag.png" alt="Egypt" class="flag-icon" />
                    <span>Egypt Market</span>
                </button>
                <button class="link-market-saudi @(GetSelectedMarket() == "saudi" ? "active" : "")" @onclick='() => SelectMarket("saudi")'>
                    <img src="images/KSA.webp" alt="Saudi Arabia" class="flag-icon" />
                    <span>Saudi Market</span>
                </button>
            </div>
            <div class="navbar-cta">
                <a href="/login" class="btn-signin">Sign in</a>
                <a href="/signup" class="link-create-account">Create account</a>
            </div>
        </div>
    </div>
</nav>


@using SmartRx_DrugChecker.Services
@using SmartRx_DrugChecker.Models
@implements IDisposable

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<div class="modal-backdrop" @onclick="HandleClose">
    <div class="profile-add-modal" @onclick:stopPropagation="true">
        <div class="modal-header">
            <div class="modal-header-left">
                @if (isEditMode)
                {
                    <button type="button" class="back-btn" @onclick="HandleBack">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M19 12H5M12 19L5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                }
                <h2 class="modal-title">@(isEditMode ? "Edit Profile" : "Add New Profile")</h2>
            </div>
            <button type="button" class="modal-close-btn" @onclick="HandleClose">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>

        <div class="modal-body">
            <!-- Profile Image Section -->
            <div class="form-section">
                <label class="form-label">PROFILE IMAGE</label>
                <div class="profile-image-section">
                    <div class="profile-image-placeholder" @onclick="HandleUploadImage">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="camera-icon">
                            <path d="M23 19C23 19.5304 22.7893 20.0391 22.4142 20.4142C22.0391 20.7893 21.5304 21 21 21H3C2.46957 21 1.96086 20.7893 1.58579 20.4142C1.21071 20.0391 1 19.5304 1 19V8C1 7.46957 1.21071 6.96086 1.58579 6.58579C1.96086 6.21071 2.46957 6 3 6H7L9 4H15L17 6H21C21.5304 6 22.0391 6.21071 22.4142 6.58579C22.7893 6.96086 23 7.46957 23 8V19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M12 17C14.2091 17 16 15.2091 16 13C16 10.7909 14.2091 9 12 9C9.79086 9 8 10.7909 8 13C8 15.2091 9.79086 17 12 17Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <button type="button" class="upload-image-btn" @onclick="HandleUploadImage">
                        Upload Image
                    </button>
                </div>
                <p class="upload-hint">Supported formats: JPG, PNG, (max 5MB)</p>
            </div>

            <!-- Basic Information Section -->
            <div class="form-section">
                <label class="form-label">BASIC INFORMATION</label>
                
                <div class="form-field">
                    <label class="field-label">Name <span class="required-asterisk">*</span></label>
                    <input type="text" @bind="newProfile.Name" class="form-input" placeholder="Name" />
                </div>

                <div class="form-field">
                    <label class="field-label">Specialty <span class="required-asterisk">*</span></label>
                    <input type="text" @bind="newProfile.Specialty" class="form-input" placeholder="Search or select specialty" />
                </div>

                <div class="form-field">
                    <label class="field-label">Professional Title <span class="required-asterisk">*</span></label>
                    <input type="text" @bind="newProfile.Title" class="form-input" placeholder="Search or select title" />
                </div>
            </div>

            <!-- Education Section -->
            <div class="form-section">
                <label class="form-label">EDUCATION</label>
                
                <div class="form-field">
                    <label class="field-label">Qualification <span class="required-asterisk">*</span></label>
                    <input type="text" @bind="newProfile.Qualification" class="form-input" placeholder="Search or select qualification" />
                </div>
            </div>

            <!-- Organization & Location Section -->
            <div class="form-section">
                <label class="form-label">ORGANIZATION & LOCATION</label>
                
                <div class="form-field">
                    <label class="field-label">Organization <span class="required-asterisk">*</span></label>
                    <input type="text" @bind="newProfile.Organization" class="form-input" placeholder="e.g., Hospital Name, Clinic" />
                </div>

                <div class="form-field">
                    <label class="field-label">Address</label>
                    <textarea @bind="newProfile.Location" class="form-textarea" placeholder="Full address" rows="3"></textarea>
                </div>

                <div class="form-field">
                    <label class="field-label">Map Location URL</label>
                    <input type="url" @bind="newProfile.MapUrl" class="form-input" placeholder="e.g., https://maps.google.com/.." />
                </div>
            </div>

            <!-- About Section -->
            <div class="form-section">
                <label class="form-label">ABOUT</label>
                
                <div class="form-field">
                    <label class="field-label">About You</label>
                    <textarea @bind="newProfile.About" class="form-textarea" placeholder="Write a brief biography or professional summary" rows="4"></textarea>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="cancel-btn" @onclick="HandleClose">Cancel</button>
            <button type="button" class="add-profile-btn" @onclick="HandleSave">Add Profile</button>
        </div>
    </div>
</div>


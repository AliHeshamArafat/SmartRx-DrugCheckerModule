    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        padding: 1.5rem 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .cancel-btn {
        padding: 0.75rem 1.5rem;
        background: #ffffff;
        color: #6b7280;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .cancel-btn:hover {
        background: #f9fafb;
        border-color: #d1d5db;
    }

    .add-profile-btn {
        padding: 0.75rem 1.5rem;
        background: #4994FF;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .add-profile-btn:hover {
        background: #357abd;
    }

    @@media (max-width: 768px) {
        .modal-backdrop {
            padding: 0.5rem;
        }

        .profile-add-modal {
            max-height: 95vh;
            border-radius: 12px;
        }

        .modal-header {
            padding: 1rem 1.25rem;
        }

        .modal-title {
            font-size: 18px;
        }

        .modal-body {
            padding: 1.25rem;
        }

        .form-section {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-size: 12px;
            margin-bottom: 0.75rem;
        }

        .form-field {
            margin-bottom: 1rem;
        }

        .profile-image-placeholder {
            width: 60px;
            height: 60px;
        }

        .camera-icon {
            width: 20px;
            height: 20px;
        }

        .upload-image-btn {
            padding: 0.625rem 1.25rem;
            font-size: 12px;
        }

        .upload-hint {
            font-size: 10px;
        }

        .form-input,
        .form-textarea {
            padding: 0.625rem 0.875rem;
            font-size: 12px;
        }

        .modal-footer {
            padding: 1rem 1.25rem;
            gap: 0.75rem;
        }

        .cancel-btn,
        .add-profile-btn {
            padding: 0.625rem 1.25rem;
            font-size: 12px;
        }
    }
</style>

@code {
    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<ProfessionalProfile> OnSave { get; set; }

    [Parameter]
    public ProfessionalProfile? EditProfile { get; set; }

    [Parameter]
    public EventCallback OnBack { get; set; }

    private ProfessionalProfile newProfile = new();
    private bool isEditMode => EditProfile != null;

    protected override void OnParametersSet()
    {
        if (EditProfile != null)
        {
            newProfile = new ProfessionalProfile
            {
                Id = EditProfile.Id,
                Name = EditProfile.Name,
                Title = EditProfile.Title,
                Specialty = EditProfile.Specialty,
                Qualification = EditProfile.Qualification,
                Organization = EditProfile.Organization,
                Location = EditProfile.Location,
                MapUrl = EditProfile.MapUrl,
                About = EditProfile.About,
                ProfileImageUrl = EditProfile.ProfileImageUrl,
                LastUpdated = EditProfile.LastUpdated
            };
        }
        else
        {
            newProfile = new ProfessionalProfile();
        }
    }

    private void HandleClose()
    {
        if (!isEditMode)
        {
            newProfile = new ProfessionalProfile();
        }
        // Don't use ModalStateService to avoid conflict with FeedbackModal
        OnClose.InvokeAsync();
    }

    private void HandleBack()
    {
        // Return to view mode
        OnBack.InvokeAsync();
    }

    private void HandleUploadImage()
    {
        // TODO: Implement image upload functionality
        Console.WriteLine("Upload image clicked");
    }

    private void HandleSave()
    {
        if (string.IsNullOrWhiteSpace(newProfile.Name) || 
            string.IsNullOrWhiteSpace(newProfile.Specialty) || 
            string.IsNullOrWhiteSpace(newProfile.Title) ||
            string.IsNullOrWhiteSpace(newProfile.Qualification) ||
            string.IsNullOrWhiteSpace(newProfile.Organization))
        {
            // TODO: Show validation message to user
            return;
        }

        newProfile.LastUpdated = DateTime.Now;
        OnSave.InvokeAsync(newProfile);
        HandleClose();
    }

    public void Dispose()
    {
        // Cleanup if needed
    }
}

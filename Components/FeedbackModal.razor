@code {
    [Inject]
    private ModalStateService? ModalState { get; set; }

    private bool IsOpen => ModalState?.IsModalOpen ?? false;

    private int rating = 0;
    private int hoverRating = 0;

    private class FeedbackData
    {
        public string Name { get; set; } = "";
        public string Feedback { get; set; } = "";
        public string Email { get; set; } = "";
    }

    private FeedbackData feedbackData = new();

    protected override void OnInitialized()
    {
        if (ModalState != null)
        {
            ModalState.OnModalStateChanged += HandleModalStateChanged;
        }
    }

    protected override void OnParametersSet()
    {
        // Reset form when modal opens
        if (IsOpen && rating == 0 && hoverRating == 0)
        {
            rating = 0;
            hoverRating = 0;
            feedbackData = new FeedbackData();
        }
    }

    public void Dispose()
    {
        if (ModalState != null)
        {
            ModalState.OnModalStateChanged -= HandleModalStateChanged;
        }
    }

    private void HandleModalStateChanged()
    {
        // Reset form when modal closes
        if (!IsOpen)
        {
            rating = 0;
            hoverRating = 0;
            feedbackData = new FeedbackData();
        }
        InvokeAsync(StateHasChanged);
    }

    private bool showConfirmClose = false;

    private void HandleBackdropClick()
    {
        showConfirmClose = true;
        StateHasChanged();
    }

    private void CancelClose()
    {
        showConfirmClose = false;
        StateHasChanged();
    }

    private void ConfirmClose()
    {
        showConfirmClose = false;
        if (ModalState != null)
        {
            ModalState.IsModalOpen = false;
        }
        StateHasChanged();
    }

    private void CloseModal()
    {
        if (ModalState != null)
        {
            ModalState.IsModalOpen = false;
        }
    }

    private void SetRating(int value)
    {
        rating = value;
        hoverRating = 0; // Clear hover when rating is set
        StateHasChanged();
    }

    private void SetHoverRating(int value)
    {
        if (hoverRating != value)
        {
            hoverRating = value;
            InvokeAsync(StateHasChanged);
        }
    }

    private bool GetStarFill(int starIndex)
    {
        // When hovering, show hover state (fill stars 1 to hoverRating)
        if (hoverRating > 0)
        {
            return starIndex <= hoverRating;
        }
        // When not hovering, show selected rating (fill stars 1 to rating)
        if (rating > 0)
        {
            return starIndex <= rating;
        }
        // No rating selected, no hover - don't fill any stars
        return false;
    }

    private void HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(feedbackData.Feedback))
        {
            return;
        }

        Console.WriteLine($"Feedback submitted - Rating: {rating}, Name: {feedbackData.Name}, Email: {feedbackData.Email}, Feedback: {feedbackData.Feedback}");
        
        // TODO: Implement actual feedback submission logic
        
        // Reset form
        feedbackData = new FeedbackData();
        rating = 0;
        hoverRating = 0;
        
        // Close modal
        CloseModal();
    }
}

@using SmartRx_DrugChecker.Services
@implements IDisposable

@if (IsOpen)
{
    <div class="modal-backdrop" @onclick="HandleBackdropClick"></div>
    <div class="modal-container">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header">
                <div class="modal-header-left">
                    <div class="speech-bubble-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="modal-title-group">
                        <h2 class="modal-title">Share Your Feedback</h2>
                        <p class="modal-subtitle">Help us improve SmartRx</p>
                    </div>
                </div>
                <button class="modal-close-btn" @onclick="CloseModal" aria-label="Close modal">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </div>

            <!-- Form -->
            <form class="feedback-form" @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                <!-- Experience Rating -->
                <div class="form-group">
                    <label class="form-label">How would you rate your experience?</label>
                    <div class="star-rating-wrapper">
                        <div class="star-rating" @onmouseleave="() => hoverRating = 0">
                            @for (int i = 1; i <= 5; i++)
                            {
                                var starIndex = i;
                                var isFilled = GetStarFill(starIndex);
                                var isSelected = rating >= starIndex;
                                var isHovered = hoverRating > 0 && hoverRating >= starIndex;
                                <button type="button" class="star-btn @(isSelected ? "filled" : "") @(isHovered ? "hover-filled" : "")" @onclick="() => SetRating(starIndex)" @onmouseenter="() => SetHoverRating(starIndex)">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" 
                                              stroke="currentColor" 
                                              stroke-width="2" 
                                              stroke-linecap="round" 
                                              stroke-linejoin="round"
                                              fill="@(isFilled ? "currentColor" : "none")"/>
                                    </svg>
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <!-- Name -->
                <div class="form-group">
                    <label class="form-label" for="feedback-name">Name</label>
                    <input id="feedback-name" 
                           class="form-input" 
                           type="text" 
                           placeholder="Name" 
                           @bind="feedbackData.Name" 
                           @bind:event="oninput" />
                </div>

                <!-- Feedback Textarea -->
                <div class="form-group">
                    <label class="form-label" for="feedback-message">
                        Your Feedback <span class="required-asterisk">*</span>
                    </label>
                    <textarea id="feedback-message" 
                              class="form-textarea" 
                              placeholder="Tell us what you think..." 
                              rows="5" 
                              @bind="feedbackData.Feedback" 
                              @bind:event="oninput"
                              required></textarea>
                </div>

                <!-- Email (Optional) -->
                <div class="form-group">
                    <label class="form-label" for="feedback-email">Email Address (Optional)</label>
                    <input id="feedback-email" 
                           class="form-input" 
                           type="email" 
                           placeholder="your@email.com" 
                           @bind="feedbackData.Email" 
                           @bind:event="oninput" />
                </div>

                <!-- Submit Button -->
                <button type="submit" class="submit-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="submit-icon">
                        <path d="M22 2L11 13M22 2L15 22L11 13M22 2L2 9L11 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>Submit Feedback</span>
                </button>
            </form>
        </div>
    </div>
}

@if (showConfirmClose)
{
    <div class="confirm-modal-backdrop" @onclick="CancelClose"></div>
    <div class="confirm-modal-container">
        <div class="confirm-modal-content">
            <h3 class="confirm-modal-title">Discard Feedback?</h3>
            <p class="confirm-modal-message">Are you sure you want to close without submitting your feedback?</p>
            <div class="confirm-modal-actions">
                <button type="button" class="confirm-btn cancel-btn" @onclick="CancelClose">Cancel</button>
                <button type="button" class="confirm-btn confirm-close-btn" @onclick="ConfirmClose">Discard</button>
            </div>
        </div>
    </div>
}

